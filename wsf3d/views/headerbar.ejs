<div id="headerBar">
	<div id="header-info"></div>
	<div id="header-nav"></div>
</div>

<script type="text/javascript">
	function getCookie(cname) {
	  var name = cname + "=";
	  var ca = document.cookie.split(';');
	  for(var i = 0; i < ca.length; i++) {
	    var c = ca[i];
	    while (c.charAt(0) == ' ') {
	      c = c.substring(1);
	    }
	    if (c.indexOf(name) == 0) {
	      return c.substring(name.length, c.length);
	    }
	  }
	  return "";
	}

	elem = document.getElementById('header-nav');

	elem.innerHTML = `		
			<b>user:</b> ${getCookie('uname')} (<a href="/">Home</a>, <a href="/auth/logout">Logout</a>)		
	`;

</script>